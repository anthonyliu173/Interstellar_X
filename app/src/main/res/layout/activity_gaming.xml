<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.anthony.practice.FullscreenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlLoading"
        android:visibility="gone">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                style="@style/extraLargeHeaderWhite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="L"
                android:id="@+id/textView2"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imgSpacecraft"
                android:src="@drawable/spacecraft"
                android:layout_weight="1"
                android:interpolator="@android:anim/linear_interpolator"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small" />

            <TextView
                style="@style/extraLargeHeaderWhite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ADING..."
                android:id="@+id/textView3"
                android:gravity="center_vertical" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlPreamble">

        <FrameLayout
            android:id="@+id/flPreamble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:padding="@dimen/margin_small">

        <TextView
            style="@style/mediumHeaderWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Speed: "
            android:id="@+id/txtMaxSpeed"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|left" />

        <TextView
            style="@style/mediumHeaderWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed: "
            android:id="@+id/txtSpeed"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|left" />

    </LinearLayout>

</FrameLayout>
